{
  "name": "vue-multi-page",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env PROCESS_ENV=dev vue-cli-service serve --mode test",
    "serve": "cross-env PROCESS_ENV=test vue-cli-service serve --mode test",
    "test": "cross-env PROCESS_ENV=test vue-cli-service build --mode build",
    "preprod": "cross-env NODE_ENV=production PROCESS_ENV=pre vue-cli-service build --mode build",
    "build": "cross-env PROCESS_ENV=prod vue-cli-service build --mode build",
    "lint": "cross-env PROCESS_ENV=dev vue-cli-service lint"
  },
  "dependencies": {
    "vant": "^2.9.0",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "^4.3.1",
    "@vue/cli-service": "~4.2.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "axios": "^0.19.2",
    "babel-eslint": "^10.1.0",
    "compression-webpack-plugin": "^1.1.12",
    "cross-env": "^7.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "fingerprintjs": "^0.5.3",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "html2canvas": "1.0.0-rc.4",
    "husky": "^4.2.5",
    "lib-flexible": "^0.3.2",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.13.1",
    "postcss-pxtorem": "^5.1.1",
    "progress-bar-webpack-plugin": "^2.1.0",
    "sass-loader": "^8.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ]
    }
  }
}
